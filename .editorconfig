# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project across various editors and IDEs

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Lua files
[*.lua]
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx,json,jsonc}]
indent_style = space
indent_size = 3

# HTML/CSS/XML and related
[*.{html,htm,css,scss,less,xml,xhtml,svg,yaml,yml,md,markdown,mdx}]
indent_style = space
indent_size = 3

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 4

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Rust files
[*.rs]
indent_style = space
indent_size = 4

# Java files
[*.java]
indent_style = space
indent_size = 4
{
  "useTabs": false,
  "tabWidth": 4,
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 80,
  "overrides": [
    {
      "files": [
        "*.jsx",
        "*.tsx",
        "*.html",
        "*.xml",
        "*.xhtml",
        "*.vue",
        "*.svelte",
        "*.astro"
      ],
      "options": {
        "tabWidth": 3
      }
    }
  ]
}